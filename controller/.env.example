# BlackRoad Agent OS - Controller Environment Variables
# Copy this to .env and fill in your values

# Server
PORT=8000

# Planner Provider (auto-detected if not set)
# Options: stub, anthropic, openai, gpt_oss, mistral, ollama
# PLANNER_PROVIDER=anthropic

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# HuggingFace (GPT-OSS models)
HF_API_TOKEN=your-huggingface-token
GPT_OSS_MODEL=mistralai/Mistral-7B-Instruct-v0.2
# GPT_OSS_ENDPOINT=https://your-custom-endpoint  # Optional

# Mistral
MISTRAL_API_KEY=your-mistral-api-key
MISTRAL_MODEL=mistral-large-latest

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
